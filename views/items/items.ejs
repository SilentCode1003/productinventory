<!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="itemsModal" tabindex="-1" role="dialog"
  aria-labelledby="exampleModalLabel" aria-hidden="true" data-keyboard="false" data-backdrop="static">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Category</h5>
      </div>
      <div class="modal-body">
        <div class="row mb-2">
          <div class="col-lg-12">
            <div class="card-body">
              <div class="row mb-2">
                <div class="col-md-12">
                  <label class="form-label" for="itemscodemodal">Item ID</label>
                  <input id="itemscodemodal" name="itemscodemodal" type="text" class="form-control"
                    placeholder="Enter new itemcode" aria-label="itemscodemodal" aria-describedby="basic-addon1"
                    disabled />
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <label class="form-label" for="itemsnamemodal">Category Name</label>
                  <input id="itemsnamemodal" name="itemsnamemodal" type="text" class="form-control"
                    placeholder="Enter new item name" aria-label="itemsnamemodal" aria-describedby="basic-addon1" />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-cyberpower" data-dismiss="modal">
          <i class="fa fa-times" aria-hidden="true"></i>Close
        </button>
        <button type="button" id="saveBtn" class="btn btn-outline-cyberpower">
          <i class="fa fa-check" aria-hidden="true"></i>Update
        </button>
      </div>
    </div>
  </div>
</div>

<!-- PCreated by Heading -->
<!-- Content Row -->
<div class="row mb-2 mt-3">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <label class="form-label cyber-title" for="itemsname">Item Description</label>
        </div>
        <div class="row mb-2">
          <div class="col-md-6 mb-2">
            <div class="custom-input-group">
              <input required="" id="itemsname" name="itemsname" type="text" name="text" autocomplete="off" class="custom-input">
              <label class="custom-label">Input Item Name</label>
            </div>
          </div>
          <div class="col-md-6 mb-2">
            <div class="customdropdown">
              <div class="select selectcategory">
                <span id="selectedcategory">Select Category</span>
                <i class="fa fa-chevron-left"></i>
              </div>
              <input type="hidden" name="categoryid" id="categoryid">
              <ul class="customdropdown-menu categorylist">
              </ul>
            </div>
          </div>
        </div>

        <div class="row justify-content-end">
          <div class="col-md-2 mt-1 text-right">
            <button id="addBtn" name="addBtn" class="btn btn-outline-cyberpower shadow-sm w-100">
              <i class="fa fa-plus" aria-hidden="true"></i>
              Add
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

