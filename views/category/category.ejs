<!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="categoryModal" tabindex="-1" role="dialog"
  aria-labelledby="exampleModalLabel" aria-hidden="true" data-keyboard="false" data-backdrop="static">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Category</h5>
      </div>
      <div class="modal-body">
        <div class="row mb-2">
          <div class="col-lg-12">
            <div class="card-body">
              <div class="row mb-2">
                <div class="col-md-12">
                  <label class="form-label" for="categorycodemodal">Category Code</label>
                  <input id="categorycodemodal" name="categorycodemodal" type="text" class="form-control"
                    placeholder="Enter new category" aria-label="fullname" aria-describedby="basic-addon1" disabled />
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <label class="form-label" for="categorynamemodal">Category Name</label>
                  <input id="categorynamemodal" name="categorynamemodal" type="text" class="form-control"
                    placeholder="Enter new category" aria-label="fullname" aria-describedby="basic-addon1" />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-cyberpower" data-dismiss="modal">
          <i class="fa fa-times" aria-hidden="true"></i>Close
        </button>
        <button type="button" id="updateBtn" class="btn btn-outline-cyberpower">
          <i class="fa fa-check" aria-hidden="true"></i>Update
        </button>
      </div>
    </div>
  </div>
</div>

