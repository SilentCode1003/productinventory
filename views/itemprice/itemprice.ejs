<!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="editModal" tabindex="-1" role="dialog"
  aria-labelledby="exampleModalLabel" aria-hidden="true" data-keyboard="false" data-backdrop="static">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Item Price</h5>
      </div>
      <div class="modal-body">
        <div class="row mb-2">
          <div class="col-lg-12">
            <div class="card-body">
              <div class="row mb-2 justify-content-center">
                <div class="col-md-6">
                  <label class="form-label" for="id">Item ID</label>
                  <input id="itemidmodal" name="itemidmodal" type="text" class="form-control" placeholder=""
                    aria-label="itemidmodal" aria-describedby="basic-addon1" disabled />
                </div>
                <div class="col-md-6">
                  <label class="form-label" for="fobpricemodal">FOB Price</label>
                  <input id="fobpricemodal" name="fobpricemodal" type="text" class="form-control"
                    placeholder="Enter New FOB Price" aria-label="fobpricemodal" aria-describedby="basic-addon1" oninput="formatPrice(event, this)"/>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm"
          data-dismiss="modal">
          <i class="fa fa-times" aria-hidden="true"></i> Close
        </button>
        <button type="button" id="updateBtn" class="d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm">
          <i class="fa fa-check" aria-hidden="true"></i> Save
        </button>
      </div>
    </div>
  </div>
</div>

<!-- PCreated by Heading -->
<!-- Content Row -->
<div class="row mb-2 mt-3">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <label class="form-label cyber-title" for="itemsname">Item Price</label>
        </div>
        <div class="row mb-2">
          <div class="col-md-6 mb-2">
            <div class="input-group">
              <input class="form-control text-center custom-input" placeholder="Select Item" name="itemname" id="itemname" />
              <input type="hidden" id="hiddenValue" name="hiddenValue" />
              <div class="input-group-append">
                <span class="input-group-text">Item Name</span>
              </div>
            </div>
            <div class="custom-dropdown custom-dropdown-margin-left" id="itemDropdown"></div>
          </div>

          <div class="col-md-6 mb-2">
            <div class="custom-input-group">
              <input required="" id="fobprice" name="fobprice" type="text" name="text" autocomplete="off" class="custom-input">
              <label class="custom-label">Input FOB Price</label>
            </div>
          </div>
        </div>

        <div class="row justify-content-end">
          <div class="col-md-2 align mt-1">
            <button id="addBtn" name="addBtn" class="btn btn-sm btn-outline-cyberpower shadow-sm w-100">
              <i class="fa fa-plus" aria-hidden="true"></i>
              Add
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4 table-size">
  <div class="progress progress-sm mb-2">
    <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0"
      aria-valuemax="100"></div>
  </div>
  <div class="card-header card-bg align-content-center">
    <div class="row">
      <div class="col-md-2 mt-2">
        <h5 class="m-0 font-weight-bold cyber-title mt-2">Item Price Table</h5>
      </div>
      <div class="col-md-5 mt-2">
        <input id="search" name="search" type="text" class="form-control" placeholder="Search Category Name"
          aria-label="search" aria-describedby="basic-addon1" />
      </div>
      <div class="col-md-3 mt-2">
        <div class="input-group mb-3">
          <input class="btn btn-outline-cyberpower btn-sm w-100" type="file" id="fileinput" accept=".xlsx, .xls"
            placeholder="Select Excel File" />
        </div>
      </div>
      <div class="col-md-2 mt-2">
        <button class="btn btn-outline-cyberpower btn-sm" id="uploadButton" type="button">
          <i class="fas fa-upload"></i>
        </button>
      </div>
    </div>
  </div>

  <div class="table-responsive scrollable-table-container">
    <table class="table custom-mobile-table" id="datatable" width="100%" cellspacing="10">
      <thead class="header-style table-header">
        <tr>
          <th class="col-1">ID</th>
          <th class="col-2">Item ID</th>
          <th class="col-1">Price (FOB)</th>
          <th class="col-3">Created By</th>
          <th class="col-3">Created Date</th>
          <th class="col-1">Status</th>
          <th class="col-1"></th>
        </tr>
      </thead>

      <tbody class="no-border"></tbody>
    </table>
  </div>
</div>