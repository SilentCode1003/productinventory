  const TableLoader = (table, row, col) => {
    const loaderCell = '<td><div class="custom-loader"></div></td>';
    const tbody = $(`${table} tbody`);

    if (tbody.length === 0) {
      console.error("Table or tbody not found.");
      return;
    }

    for (let i = 0; i < row; i++) {
      let rowHtml = '<tr id="loading-state">';
      for (let j = 0; j < col; j++) {
        rowHtml += loaderCell;
      }
      rowHtml += '</tr>';
      tbody.append(rowHtml);
    }
  };
  
